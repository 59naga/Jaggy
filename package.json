{
  "name": "jaggy",
  "bin" : "jaggy",
  "main": "jaggy.pomace.js",
  "description": "is Converting to SVG by pixels",
  "version": "0.1.3",

  "scripts": {
    "build":"npm run build-nodejs && npm run build-browser",
    "build-nodejs":"npm run pretest",
    "build-browser":"gulp browserify -min",

    "start":"jaggy public_html -o hogekosan -g 2",
    "preview": "gulp browserify && open 'http://localhost:8000/public_html/' && python -m SimpleHTTPServer",
    
    "pretest": "rm -rf node_modules/ibrik/node_modules/coffee-script",
    "test": "ibrik cover jasminetea -- . -v && istanbul report html",
    "coveralls": "coveralls < ./coverage/lcov.info && rm -rf coverage",

    "lint": "jasminetea . -l \"*.coffee,!*.spec.coffee\"",
    "clean": "rm public_html/*.svg"
  },
  "dependencies": {
    "coffee-script": "^1.9.0",
    "commander": "^2.6.0",
    "dom-lite": "^0.3.8",
    "get-pixels": "^3.1.0",
    "gify-parse": "^1.0.4",
    "gulp": "^3.8.10",
    "gulp-util": "^3.0.3",
    "mime": "^1.2.11",
    "through2": "^0.6.3"
  },
  "devDependencies": {
    "browserify": "^8.1.3",
    "coffeeify": "^1.0.0",
    "coveralls": "^2.11.2",
    "gulp-connect": "^2.2.0",
    "gulp-jasmine": "^2.0.0",
    "gulp-watch": "^4.1.0",
    "uglify-js": "^2.4.16",
    "vinyl-source-stream": "^1.0.0",
    "ibrik": "^2.0.0",
    "istanbul": "^0.3.6",
    "jasminetea": "^0.1.4"
  },
  
  "keywords": [
    "pixelart",
    "get-pixels",
    "cross-platform",
    "gulpplugin",
    "gif"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/59naga/jaggy.git"
  },
  "bugs": {
    "url": "https://github.com/59naga/jaggy/issues"
  },
  "homepage": "https://github.com/59naga/jaggy",
  "author": "59naga <i59naga@icloud.com> (http://berabou.me/)",
  "license": "MIT"
}
